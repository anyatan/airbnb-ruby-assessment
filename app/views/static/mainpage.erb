<h1>Please view the available properties, and click to book</h1>
<form method="post" action="/properties">
		<input type=test placeholder="Property" name="property"><br>
		<input type=submit value="Submit your property">
</form>

<% @properties.each do |p| %>
<div>
	<%if !p.property.nil?%>
<a href ="/properties/bookings/<%=p.id%>"><%= p.property %></a>
<h3>Original comment</h3>
	<%p.comments.each do |c|%>
		<div><%=c.comment%></div>
	<%end%>
<h3>ADD Comment here</h3>
<form method="post" action='/comments/new'>
	<input type="hidden" name="property_id" value="<%=p.id%>">
	<input type="text" name="comment">
	<input type="submit" value="submit">
</form>
</div>
<% end %>
<% end %>



